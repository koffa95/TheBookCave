@model List<TheBookCave.Models.ViewModels.BookListViewModel>
@{
    ViewBag.Title = "book details";
}
<div class="detailsDiv">
    @foreach(var book in @Model)
    {
        <h1>@book.title</h1>
        <div id="image">
            <img src="@book.image" alt="Book">
        <div class="details">
        <h4>About book: </h4>
            <p><a asp-area="" asp-controller="Author" asp-action="Details" asp-route-id="@book.authorId">@book.author</a></p>
            <p>Genre: @book.genre</p>
            <p>Release Year: @book.releaseYear</p>
            <p>Publisher: @book.publisher</p>
            <p>Translator: @book.translator</p>
            <p>Original Language: @book.originalLanguage</p>
            <p>Language: @book.language</p>
            <p>Pages: @book.pages</p>
            <p>Price: @book.price</p>
            <button class="glyphicon glyphicon-shopping-cart"> Buy!</button>
            <div class="shortDescription">
                <p>Description:</p>
                <p>@book.shortDescription</p>
            </div>
        </div>
        </div>
    }
</div>