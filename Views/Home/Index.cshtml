@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active"> <!--breyta-->
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" /> 
            <div class="carousel-caption" role="option">
                <p>
                    Discover the world of Harry Potter!
                    <a class="btn btn-default" asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="11">
                        Click here!
                    </a>
                </p>
            </div>
        </div>
        <div class="item"> <!--breyta-->
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Read the first translated book of Halldor Laxness today!
                    <a class="btn btn-default" asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="2">
                        Salka Valka
                    </a>
                </p>
            </div>
        </div>
        <div class="item"> <!--breyta-->
            <img src="~/images/banner3.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The Lord of the Rings: 50th Anniversary, One Vol. Edition is now available!
                    <a class="btn btn-default" asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="5">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item"> <!--breyta-->
            <img src="~/images/banner4.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Discover the works of Shakespeare
                    <a class="btn btn-default" asp-area="" asp-controller="Author" asp-action="Details" asp-route-id="4">
                        Learn More Here
                    </a>
                </p>
            </div>
        </div>
    </div> <!--breyta-->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>